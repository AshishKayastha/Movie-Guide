<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/content_layout"
    style="@style/Match">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:elevation="0dp"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            style="@style/Match"
            android:fitsSystemWindows="true"
            app:collapsedTitleTextAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
            app:contentScrim="?colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:titleEnabled="false">

            <ImageView
                android:id="@+id/cover_bg"
                style="@style/Match"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                tools:ignore="ContentDescription"
                tools:src="@drawable/bg_drawer_header" />

            <LinearLayout
                style="@style/Match"
                android:gravity="center">

                <ImageView
                    android:id="@+id/user_image"
                    android:layout_width="@dimen/drawer_user_image_size"
                    android:layout_height="@dimen/drawer_user_image_size"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:scaleType="centerCrop"
                    android:transitionName="@string/transition_user_image"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/ic_person_white_80dp" />

                <com.ashish.movieguide.ui.widget.FontTextView
                    android:id="@+id/user_name_text"
                    style="@style/PrimaryText"
                    android:layout_marginBottom="@dimen/spacing_normal"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:gravity="center_horizontal"
                    tools:text="User Name" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <com.ashish.movieguide.ui.widget.FontTextView
                        android:id="@+id/friend_count_text"
                        style="@style/SmallText"
                        android:text="@string/friend_count" />

                    <com.ashish.movieguide.ui.widget.FontTextView
                        style="@style/SmallText"
                        android:layout_marginEnd="@dimen/line_spacing"
                        android:layout_marginStart="@dimen/line_spacing"
                        android:text="|"
                        tools:ignore="HardcodedText" />

                    <com.ashish.movieguide.ui.widget.FontTextView
                        android:id="@+id/follower_count_text"
                        style="@style/SmallText"
                        android:text="@string/follower_count" />

                    <com.ashish.movieguide.ui.widget.FontTextView
                        style="@style/SmallText"
                        android:layout_marginEnd="@dimen/line_spacing"
                        android:layout_marginStart="@dimen/line_spacing"
                        android:text="|"
                        tools:ignore="HardcodedText" />

                    <com.ashish.movieguide.ui.widget.FontTextView
                        android:id="@+id/following_count_text"
                        style="@style/SmallText"
                        android:text="@string/following_count" />

                </LinearLayout>

            </LinearLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                style="@style/Toolbar"
                android:background="@null"
                app:layout_collapseMode="pin" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll_view"
        style="@style/DetailNestedScrollView">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/spacing_large">

            <include layout="@layout/layout_progress_bar" />

        </FrameLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>