<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_layout"
    style="@style/Match"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_backdrop_height"
        android:elevation="0dp"
        android:fitsSystemWindows="true"
        tools:ignore="UnusedAttribute">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            style="@style/Match"
            android:fitsSystemWindows="true"
            app:collapsedTitleTextAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
            app:contentScrim="?colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <ImageView
                android:id="@+id/backdrop_image"
                style="@style/Match"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                tools:ignore="ContentDescription" />

            <LinearLayout
                style="@style/Match.Width"
                android:layout_gravity="bottom"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/poster_image"
                    android:layout_width="110dp"
                    android:layout_height="@dimen/detail_poster_image_height"
                    android:layout_marginStart="@dimen/first_keyline"
                    android:scaleType="centerCrop"
                    android:transitionName="@string/transition_poster_image"
                    tools:ignore="ContentDescription"
                    tools:targetApi="lollipop" />

                <com.ashish.movies.ui.widget.FontTextView
                    android:id="@+id/content_title_text"
                    style="@style/PrimaryText"
                    android:layout_gravity="bottom"
                    android:maxLines="3"
                    android:padding="@dimen/spacing_large"
                    android:textSize="@dimen/text_size_xlarge" />

            </LinearLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                style="@style/Toolbar"
                android:background="@null"
                app:layout_collapseMode="pin" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        style="@style/Match"
        android:fitsSystemWindows="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <FrameLayout style="@style/Match.Width">

            <me.zhanghai.android.materialprogressbar.MaterialProgressBar
                android:id="@+id/material_progress_bar"
                style="@style/MaterialProgressBar"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginTop="@dimen/spacing_large"
                tools:visibility="visible" />

            <LinearLayout
                android:id="@+id/detail_container"
                style="@style/Match.Width"
                android:paddingBottom="@dimen/spacing_large"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    style="@style/Match.Width"
                    android:layout_marginBottom="@dimen/spacing_medium"
                    android:paddingEnd="@dimen/first_keyline"
                    android:paddingStart="@dimen/first_keyline"
                    android:paddingTop="@dimen/spacing_large">

                    <com.ashish.movies.ui.widget.FontTextView
                        style="@style/PrimaryText.Title"
                        android:layout_marginTop="0dp"
                        android:text="@string/overview_title" />

                    <com.ashish.movies.ui.widget.FontTextView
                        android:id="@+id/overview_text"
                        style="@style/SecondaryText.Title"
                        tools:text="This is an overview" />

                    <com.ashish.movies.ui.widget.FontTextView
                        style="@style/PrimaryText.Title"
                        android:text="@string/genre_title" />

                    <com.ashish.movies.ui.widget.FontTextView
                        android:id="@+id/genres_text"
                        style="@style/SecondaryText.Title" />

                    <com.ashish.movies.ui.widget.FontTextView
                        style="@style/PrimaryText.Title"
                        android:text="@string/runtime_title" />

                    <com.ashish.movies.ui.widget.FontTextView
                        android:id="@+id/runtime_text"
                        style="@style/SecondaryText.Title" />

                    <com.ashish.movies.ui.widget.FontTextView
                        style="@style/PrimaryText.Title"
                        android:text="@string/status_title" />

                    <com.ashish.movies.ui.widget.FontTextView
                        android:id="@+id/status_text"
                        style="@style/SecondaryText.Title" />

                    <com.ashish.movies.ui.widget.FontTextView
                        style="@style/PrimaryText.Title"
                        android:text="@string/release_date_title" />

                    <com.ashish.movies.ui.widget.FontTextView
                        android:id="@+id/release_date_text"
                        style="@style/SecondaryText.Title" />

                    <com.ashish.movies.ui.widget.FontTextView
                        style="@style/PrimaryText.Title"
                        android:text="@string/budget_title" />

                    <com.ashish.movies.ui.widget.FontTextView
                        android:id="@+id/budget_text"
                        style="@style/SecondaryText.Title" />

                    <com.ashish.movies.ui.widget.FontTextView
                        style="@style/PrimaryText.Title"
                        android:text="@string/revenue_title" />

                    <com.ashish.movies.ui.widget.FontTextView
                        android:id="@+id/revenue_text"
                        style="@style/SecondaryText.Title" />

                </LinearLayout>

                <ViewStub
                    android:id="@+id/cast_view_stub"
                    style="@style/Match.Width"
                    android:layout="@layout/layout_cast_credits" />

                <ViewStub
                    android:id="@+id/crew_view_stub"
                    style="@style/Match.Width"
                    android:layout="@layout/layout_crew_credits" />

                <ViewStub
                    android:id="@+id/similar_content_view_stub"
                    style="@style/Match.Width"
                    android:layout="@layout/layout_similar_content" />

            </LinearLayout>

        </FrameLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>