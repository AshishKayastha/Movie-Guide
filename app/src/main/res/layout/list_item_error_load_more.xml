<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/spacing_medium"
    android:paddingEnd="@dimen/spacing_normal"
    android:paddingStart="@dimen/spacing_normal"
    android:paddingTop="@dimen/spacing_medium">

    <com.ashish.movieguide.ui.widget.FontTextView
        android:id="@+id/load_more_error_text"
        style="@style/PrimaryText"
        android:layout_width="0dp"
        android:layout_marginEnd="@dimen/spacing_micro"
        android:layout_weight="1"
        android:lineSpacingExtra="@dimen/spacing_micro"
        android:text="@string/error_no_internet"
        android:textSize="@dimen/text_size_normal" />

    <com.ashish.movieguide.ui.widget.FontButton
        android:id="@+id/retry_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_medium"
        android:text="@string/retry_btn"
        android:textSize="@dimen/text_size_normal"
        android:theme="@style/ConnectButton"
        app:fontName="@string/font_montserrat_regular" />

</LinearLayout>