<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/DetailCard"
    android:layout_marginBottom="@dimen/spacing_normal">

    <LinearLayout
        style="@style/MaterialKeylinePadding"
        android:paddingBottom="@dimen/spacing_medium"
        android:paddingTop="@dimen/spacing_medium">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/review_author_icon"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginEnd="@dimen/spacing_medium"
                tools:ignore="ContentDescription" />

            <com.ashish.movieguide.ui.widget.FontTextView
                android:id="@+id/review_author"
                style="@style/PrimaryText"
                android:textSize="@dimen/text_size_xlarge"
                app:fontName="@string/font_montserrat_medium"
                tools:text="Author Name" />

        </LinearLayout>

        <com.ashish.movieguide.ui.widget.FontTextView
            android:id="@+id/review_content"
            style="@style/PrimaryText"
            android:layout_marginTop="@dimen/spacing_large"
            android:lineSpacingExtra="@dimen/line_spacing"
            tools:text="This is a random review." />

    </LinearLayout>

</android.support.v7.widget.CardView>