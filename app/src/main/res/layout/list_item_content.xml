<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Match.Width"
    android:foreground="?selectableItemBackground"
    app:cardCornerRadius="@dimen/padding_2dp">

    <RelativeLayout style="@style/Match.Width">

        <com.ashish.movies.ui.widget.AspectRatioImageView
            android:id="@+id/poster_image"
            style="@style/Match.Width"
            android:scaleType="centerCrop"
            app:heightRatio="1.5"
            tools:ignore="ContentDescription" />

        <com.ashish.movies.ui.widget.LabelLayout
            android:id="@+id/avg_vote_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="2016"
            android:textSize="16sp"
            app:labelBackground="@android:color/holo_red_dark"
            app:labelGravity="topLeft"
            app:labelHeight="36dp"
            app:labelTextColor="@android:color/white" />

        <LinearLayout
            android:id="@+id/content_view"
            style="@style/Match.Width"
            android:layout_below="@id/poster_image"
            android:orientation="vertical"
            android:padding="@dimen/spacing_large">

            <com.ashish.movies.ui.widget.FontTextView
                android:id="@+id/content_title"
                style="@style/PrimaryText"
                android:ellipsize="end"
                android:lineSpacingExtra="@dimen/spacing_micro"
                android:maxLines="2"
                app:fontName="@string/font_montserrat_medium"
                tools:text="Movie Title" />

            <com.ashish.movies.ui.widget.FontTextView
                android:id="@+id/content_subtitle"
                style="@style/SecondaryText"
                android:layout_marginTop="@dimen/spacing_micro"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="Movie SubTitle" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>