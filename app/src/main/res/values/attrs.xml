<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AspectRatioImageView">
        <attr name="heightRatio" format="float" />
    </declare-styleable>

    <declare-styleable name="FontTextView">
        <attr name="fontName" format="string|reference" />
    </declare-styleable>

    <declare-styleable name="LabelLayout">
        <attr name="labelHeight" format="dimension" />
        <attr name="labelDistance" format="dimension" />
        <attr name="labelBackground" format="reference|color" />
        <attr name="labelTextColor" format="reference|color" />

        <attr name="labelGravity" format="enum">
            <enum name="topLeft" value="0" />
            <enum name="topRight" value="1" />
            <enum name="bottomRight" value="2" />
            <enum name="bottomLeft" value="3" />
        </attr>

        <attr name="android:text" />
        <attr name="android:textSize" />
    </declare-styleable>

    <declare-styleable name="RatingView">
        <attr name="android:text" />
        <attr name="android:src" />
    </declare-styleable>

    <declare-styleable name="TimeSpentView">
        <attr name="timeSpentTypeText" format="string|reference" />
        <attr name="timeSpentTypeCount" format="string|reference" />
    </declare-styleable>

    <declare-styleable name="RatingCountLayout">
        <attr name="android:max" />
        <attr name="android:progress" />
        <attr name="numRating" format="string|reference" />
        <attr name="ratingCount" format="string|reference" />
    </declare-styleable>
</resources>